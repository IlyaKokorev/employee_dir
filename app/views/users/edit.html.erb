<h1><%= t('pages.global.user_edit') %></h1>

<div class="container text-center">
    <% if current_user.has_role? :admin %>
      <%= render 'form_for_admin', user: @user %>
    <% else %>
      <%= render 'form_for_user', user: @user %>
    <% end %>
</div>

<br>

<%= link_to t('pages.button.view'), @user, type: 'button', class: 'btn btn-outline-info' %>
<%= link_to t('pages.button.back'), users_path, type: 'button', class: 'btn btn-outline-info' %>
