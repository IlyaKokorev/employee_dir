<!DOCTYPE html>
<html>
  <head>
    <title><%= t('app.name') %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container-fluid">
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark d-flex">
        <div class="container-fluid">
          <a class="navbar-brand"><%= t('app.logo') %></a>
        </div>

        <% if current_user %>
          <div class="mr-auto p-2">
            <%= link_to "#{current_user&.login}", user_path(current_user),
                        type: 'button',
                        class: 'btn btn-outline-info text-light'%>
          </div>
          <div class="p-2 text-light">
            <%= link_to t('pages.button.exit'), destroy_user_session_path,
                        :method => :delete,
                        type: 'button',
                        class: 'btn btn-outline-info nav-link text-light' %>
          </div>
        <% end %>
      </nav>
    </div>

      <div class="container-fluid">
        <%= bootstrap_flash %>

        <div class="container-fluid text-center">
          <%= yield %>
        </div>
      </div>
    </div>

    <footer class="footer">
      <nav class="navbar navbar-expand-lg">
        <div class="container-fluid">
          <p class="text-muted text-center"><%= t('app.author') %></p>
        </div>
      </nav>
    </footer>
  </body>
</html>
